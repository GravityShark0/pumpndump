#!/bin/sh
trap 'echo "Starting update..."' SIGINT

st -c update -e timeout --signal=SIGINT 10 syncclock

nohup st -g 140x40 -c scratchy -e dash -c "echo ' oaa' | nvim ~/Notes/index.org -s -;" > /dev/null &


nohup librewolf > /dev/null &
nohup gimp > /dev/null &
nohup flatpak run net.ankiweb.Anki > /dev/null &
nohup flatpak run xyz.armcord.ArmCord > /dev/null &

update
